<html>
  <head>
    <title>Personal Web | Login</title>
    <link rel='stylesheet' href='/public/style.css' />
    <!-- linking boostrap css cdn  -->
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
  </head>

  <body>
    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
      <div class='container-lg'>
        <a class='navbar-brand me-5' href='/'>
          <img src='/public/assets/logo.png' alt='logo' />
        </a>
        <div class='collapse navbar-collapse' id='navbarNav'>
          <ul class='navbar-nav'>
            <li class='nav-item'>
              <a class='nav-link' href='/'>Home</a>
            </li>
            <li class='nav-item'>
              <a href='/blog' class='nav-link'>Blog</a>
            </li>
          </ul>
          <ul class='navbar-nav ms-auto me-4'>
            <li class='nav-item'>
              <a href='/register' class='nav-link'>Register</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link list-active' href='/login'>Login</a>
            </li>
          </ul>
        </div>
        <div class='d-flex contact-me'>
          <a href='/contact'> Contact Me </a>
        </div>
      </div>
    </nav>

    <form class='form-container mt-5' action='/login' method='POST'>
        <h1>Login</h1>
        {{#if messages.warning}}
          <div class="alert alert-warning" role="alert">
            {{messages.warning}}
          </div>
        {{/if}}

        {{#if messages.error}}
          <div class="alert alert-danger" role="alert">
            {{{messages.error}}}
          </div>
        {{/if}}

        {{#if messages.success}}
          <div class="alert alert-success" role="alert">
            {{{messages.success}}}
          </div>
        {{/if}}

        <div>
            <label for='input-email' class='form-label'>Email</label>
            <input id='input-email' name="email" class='form-control' />
        </div>
        <div>
            <label for='input-password' class='form-label'>Password</label>
            <input type="password" id='input-password' name="password" class='form-control' />
        </div>
        <button type='submit' class='btn'>Submit</button>
    </form>
  </body>
</html>